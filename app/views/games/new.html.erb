<h1 class="title"> New game </h1>
<ul class="list">
<% @letters.each do |letter| %>
<li class="item"><%= letter %></li>
<% end %>
</ul>

<p class="second-title">What is the longest word you can find?</p>
<form action="/score" method="POST" class="input" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" class="bar">
  <input type="submit" value="Play" class="button">
</form>
